#!/usr/bin/env bash
set -euo pipefail
export TZ=UTC LOGNAME=tester USER=tester
unset RCSINIT

OUT="51-ci-k-rev-override.txtar"
tmp="$(mktemp -d)"
trap 'rm -rf "$tmp"' EXIT
cd "$tmp"

cat > input.txt <<'EOF'
$Id: input.txt,v 1.5 2020/01/01 12:00:00 tester Exp $
Some content.
EOF

ci -q -k2.1 -u -m"forced 2.1" -t- input.txt

cat > "$OLDPWD/$OUT" <<EOF
