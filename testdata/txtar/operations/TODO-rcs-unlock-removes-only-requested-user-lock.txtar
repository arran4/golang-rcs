-- generator.sh --
#!/usr/bin/env bash
set -euo pipefail
export TZ=UTC LOGNAME=tester USER=tester
unset RCSINIT

# Generates and verifies unlock removes only current user lock.
tmp="$(mktemp -d)"
trap 'rm -rf "$tmp"' EXIT
cd "$tmp"

printf 'trunk r1.1\n' > input.txt
ci -q -i -t- -mr1.1 -wtester -d'2020-01-01 00:00:00Z' input.txt </dev/null
co -q -l input.txt
printf 'trunk r1.2\n' > input.txt
ci -q -mr1.2 -wtester -d'2020-01-02 00:00:00Z' input.txt </dev/null

perl -0pi -e 's/locks; strict;/locks\n\ttester:1.2\n\talice:1.2\n\tbob:1.1; strict;/' input.txt,v
cp input.txt,v before.txt,v

rcs -u1.2 input.txt
cp input.txt,v after.txt,v

echo "verify only tester:1.2 lock was removed"

