-- generator.sh --
#!/usr/bin/env bash
set -euo pipefail
export TZ=UTC LOGNAME=tester USER=tester
unset RCSINIT

# Generates and verifies lock migration behavior.
tmp="$(mktemp -d)"
trap 'rm -rf "$tmp"' EXIT
cd "$tmp"

printf 'trunk r1.1\n' > input.txt
ci -q -i -tr1 -mr1.1 -wtester -d'2020-01-01 00:00:00Z' input.txt </dev/null
co -q -l input.txt
printf 'trunk r1.2\n' > input.txt
ci -q -mr1.2 -wtester -d'2020-01-02 00:00:00Z' input.txt </dev/null
co -q -l input.txt
printf 'trunk r1.3\n' > input.txt
ci -q -mr1.3 -wtester -d'2020-01-03 00:00:00Z' input.txt </dev/null

# emulate existing lock holders
perl -0pi -e 's/locks; strict;/locks\n\ttester:1.1\n\talice:1.2; strict;/' input.txt,v
cp input.txt,v before.txt,v

# command under test
rcs -l1.3 input.txt
cp input.txt,v after.txt,v

echo "compare before.txt,v / after.txt,v to input.txt,v / expected.txt,v in this txtar"

