-- generator.sh --
#!/usr/bin/env bash
set -euo pipefail
export TZ=UTC LOGNAME=tester USER=tester
unset RCSINIT

# Generates and verifies co -l denial with writable modified file.
tmp="$(mktemp -d)"
trap 'rm -rf "$tmp"' EXIT
cd "$tmp"

printf 'repo base content\n' > input.txt
ci -q -i -t- -mr1.1 -wtester -d'2020-01-01 00:00:00Z' input.txt </dev/null
co -q -l input.txt
printf 'repo head content\n' > input.txt
ci -q -mr1.2 -wtester -d'2020-01-02 00:00:00Z' input.txt </dev/null

printf 'locally edited content\n' > input.txt
chmod u+w input.txt

if co -q -l input.txt 2>err.txt; then
  echo "expected failure but command succeeded" >&2
  exit 1
fi

cat err.txt
cp input.txt,v after.txt,v

echo "verify stderr and unchanged RCS file"

